# AI Prompt Debugger Configuration
# Copy this file to .env and fill in your values

# Optional: Anthropic API key if you want to test with real API
# ANTHROPIC_API_KEY=your_key_here

# Logging configuration
LOG_LEVEL=INFO

# Token pricing (per 1000 tokens)
# Claude Sonnet default: 0.003
# Claude Opus: 0.015
# GPT-4: 0.03
TOKEN_PRICE_PER_1K=0.003

# Analysis settings
MAX_PROMPT_LENGTH=200000
STRICT_MODE=false

# Minimum severity to report (info, low, medium, high, critical)
MIN_SEVERITY=low
